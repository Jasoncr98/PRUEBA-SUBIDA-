@model Rio1.Model.Productos

@{
    ViewBag.Title = "Editar un Producto";
}
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="~/Content/Estilos.css">
    <meta name="viewport" content="width=device-width, user-scalable=yes, initial-scale-1.0, maximun-scale=3.0, minimun-scale=1.0">

</head>
<br />
<br />
<center><div class="contenedor"><center><h2>Modificar los datos del producto</h2></center></div></center>

<br />
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <center>
        <div class="TablaFormato">
            <div class="form-horizontal">
                <h4>Datos de los productos</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)



                <div class="form-group">
                    @Html.LabelFor(model => model.NombreProducto, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NombreProducto, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NombreProducto, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Monto, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Monto, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Monto, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Aceptar" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    </center>
}
<br />
<div>
    <p><a class="btn btn-success" @Html.ActionLink("Historial de productos", "Index")</a></p>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
