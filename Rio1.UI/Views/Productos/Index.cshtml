@model IEnumerable<Rio1.Model.Productos>

@{
    ViewBag.Title = "Lista de Productos";
}
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="~/Content/Estilos.css">
    <meta name="viewport" content="width=device-width, user-scalable=yes, initial-scale-1.0, maximun-scale=3.0, minimun-scale=1.0">

    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <link href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script class="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
</head>

<br />
<br />
<center><div class="contenedor"><center><h2>Información de productos</h2></center></div></center>

<br />
<!-- buscar

    <form class="busqueda">
        <div class="form-row">
            <div class="input-group">
                <input type="text" class="form-control" id="texto" placeholder="Buscar"  align="right">
            </div>
        </div>
    </form>

<!-- buscar-->
<br />
<center>
    <div class=" TablaFormato">
        <center>

            <table id="table_id" class="display">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.IdProveedor)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NombreProducto)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Monto)
                        </th>
                        <th></th>
                    </tr>
                </thead>

                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdProveedor)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NombreProducto)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Monto)
                            </td>
                            <td>

                                <a class="btn btn-danger" @Html.ActionLink("Editar", "EditarProducto", new { id = item.Id })
                                 <a class="btn btn-primary" @Html.ActionLink("Detalles", "Detallar", new { id = item.Id })


                            </td>
                        </tr>
                    </tbody>
                }

            </table>
        </center>
    </div>
</center>
<br />

<br />
<p><a class="btn btn-success" @Html.ActionLink("Regresar a proveeduría", "VistaGeneral", "Proveedores")</a></p>


@section scripts{
    <script>
        $(document).ready(function () {
            $('#table_id').DataTable();
        })


    </script>
}
